<form method="post" class = "form">
		<p>
            <input type="hidden" value="{{ music.id }}" name="id">
        </p>
        <p class="form-group">
            <label for="title">Titre de la musique :</label>
            <input type="text" name="title" id="title" value="{{music.title}}" class="form-control" required>
        </p>
        <p class="form-group">
            <label for="author">Auteur de la musique :</label>
            <input type="text" name="author" id="author" value="{{music.author}}" class="form-control" required>
        </p>
        <p class="form-group">
            <label for="source">Source de la musique :</label>
            <input type="text" name="source" id="source" value="{{music.source}}" class="form-control text-area" required>
        </p>
		<p class="form-group">
            <label for="musical_genre_id">Genre de la musique :</label>
            <select name="musical_genre_id" id="musical_genre_id" value="{{music.musical_genre_id}}" class="form-control" required>
