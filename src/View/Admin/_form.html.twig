<main class="container">
<form method="post" class="form">
		<p>
            <input type="hidden" value="{{ music.id }}" name="id">
        </p>
        <p>
            <label for="title" class="form-label">Titre de la musique :</label>
            <input type="text" name="title" id="title" value="{{music.title}}" class="form-control" required>
        </p>
        <p>
            <label for="author" class="form-label">Auteur de la musique :</label>
            <input type="text" name="author" id="author" value="{{music.author}}" class="form-control" required>
        </p>
        <p>
            <label for="source" class="form-label">Source de la musique :</label>
            <input type="text" name="source" id="source" value="{{music.source}}" class="form-control" required>
        </p>
		<p>
            <label for="genre" class="form-label">Genre de la musique :</label>
            <input type="text" name="musical_genre_id" id="musical_genre_id" value="{{music.musical_genre_id}}" class="form-control" required>
        </p>
        <p>
            <label for="image" class="form-label">Image Ã  uploader :</label>
