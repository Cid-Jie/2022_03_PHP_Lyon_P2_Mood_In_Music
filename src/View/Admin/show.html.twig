{% extends 'layout.html.twig' %}

{% block content %}
<main class="container">
    <h1 class="text-center mt-3 mb-3"> Musique ajout√©e :</h1>
    <h1 class="text-center mt-3 mb-3">
        {{music.title}} By {{music.author}} 
    </h1>
    <p>
        {{music.source}}
    </p>
    <p>
        <img src="{{music.music_image}}">
    </p>
    <p>
        {{music.genre_name}}
    </p>
    <p class="text-center">
