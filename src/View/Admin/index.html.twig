{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class = "display-1" >Bienvenue Admin_name !</h1>
    <p><a href="admin/add">Ajouter une musique</a></p>

<table class = "table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Genre</th>
            <th>Source</th>
        </tr>
    </thead>
    <tbody>
    {% for music in musics %}
    {% set musical_genres = ['pop','cinematic','electro','world','chillout','ambient'] %}
        <tr>
            <td>{{music.title}}</td>
            <td>{{music.author}}</td>
            <td>{{musical_genres[music.musical_genre_id - 1]}}</td>
            <td>{{music.source}}</td>
            <td><a href="admin/edit?id={{music.id}}">Modifier</a></td>
            <td><a href="admin/delete?id={{music.id}}">Supprimer</a></td>
        </tr>
    {% endfor %}

    </tbody>
</table>

{% endblock %}
