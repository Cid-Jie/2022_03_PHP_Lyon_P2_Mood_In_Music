{% extends 'layout.html.twig' %}

{% block content %}
<main class="container">
    <h1 class="text-center mt-5 mb-5" >Bonjour {{user.pseudo}} !</h1>
    <button type="button" class="btn btn-light float-end mb-3" id="button_add"><a href="admin/add">Ajouter une musique</a></button>
    <p>Liste des musiques</p>

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Source</th>
            <th>Genre</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
    {% for music in musics %}
        <tr>
            <td>{{music.title}}</td>
            <td>{{music.author}}</td>
            <td>{{ music.source}}</td>
            <td>{{music.genre_name}}</td>
            <td>{{music.music_image}}</td>
            <td><button type="button" class="btn btn-light"><a href="admin/edit?id={{music.id}}">Modifier</a></button></td>
            <td><button type="button" class="btn btn-danger"><a href="admin/delete?id={{music.id}}">Supprimer</a></button></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</main>
{% endblock %}