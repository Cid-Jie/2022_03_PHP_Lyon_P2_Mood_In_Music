{% extends 'layout.html.twig' %}

{% block content %}

<main class="container">
    
    <h1 class="text-center mt-5 mb-5">WELCOME TO MOOD IN MUSIC</h1>

        <div class="d-flex justify-content-between m-5 btn-group-lg " role="group" aria-label="Un groupe de boutons">
            <button type="button" class="btn btn-primary">POP</button>
            <button type="button" class="btn btn-secondary">CINEMATIC</button>
            <button type="button" class="btn btn-success">ELECTRO</button>
            <button type="button" class="btn btn-danger">WORLD</button>
            <button type="button" class="btn btn-warning">CHILLOUT</button>
            <button type="button" class="btn btn-info">AMBIENT</button>
        </div>
       

        <div class="row justify-content-around">
        {% for musical in musicals %}
            <div class="card mb-5" style="width: 20rem">
                <h5 class="card-title">{{ musical.title }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">By {{ musical.author}}/h6>
                <p class="card-text">Source : {{ musical.source}}</p>
                <a href="#" class="card-link">Link player</a>
            </div>
        {% endfor %}
        </div>
    </div>

</main>

{% endblock %}